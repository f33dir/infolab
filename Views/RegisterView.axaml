<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="InfoLab1.Views.RegisterView">
    <DockPanel Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Label>Username</Label>
            <TextBox Name="Username" Text="{Binding Username}" Margin="4"  />
            <Label>Password</Label>
            <TextBox Name="Pas" Margin="4" Text="{Binding Password}"></TextBox>
            <Label>Repeat Password</Label>
            <TextBox Name="Password" Margin="4" Text="{Binding PasswordRepeat}"></TextBox>
            <Button Name="Register"  Margin="4" Background="#13B21D" Click="Register_OnClick" Foreground="White">Register</Button>
            <Button Name="Auth"    HorizontalAlignment="Center" Click="Auth_OnClick"  BorderBrush="#FFFFFF" Foreground="#003DA2"  Margin="4">Log in</Button>
            <TextBlock Name="Error" TextWrapping="Wrap" TextAlignment="Center"  Padding="10"  Foreground="#F00707"  ></TextBlock>
        </StackPanel>
    </DockPanel>
</UserControl>
